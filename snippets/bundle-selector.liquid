
    {% assign collection_id = bundle_collection %}

    {% for collection in collections %}
        {% if collection.id == collection_id and collection.products_count > 0 %}
            {% for product in collection.products %}
                <label for="{{ product.title }}">{{ product.title }}:</label>
                <select name="{{ product.title }}" id="{{ product.id }}" class="bundle-select">
                    <option value="" selected>Please select</option>
                    {% for variant in product.variants %}
                        <option value="{{ variant.id }}">{{ variant.title }} - {{ variant.price | money_with_currency }}</option>
                    {% endfor %}
                </select>
            {% endfor %}
        {% endif %}
    {% endfor %}



